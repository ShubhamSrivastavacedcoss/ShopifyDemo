<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rupee_one"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rupee" />

        <com.shopifydemodemo.app.customviews.MageNativeTextView
            android:id="@+id/optiontitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rupee_one"
            app:layout_constraintTop_toTopOf="parent"
            app:texttype="bold" />

        <com.shopifydemodemo.app.customviews.MageNativeTextView
            android:id="@+id/optionpoint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rupee_one"
            app:layout_constraintTop_toBottomOf="@+id/optiontitle"
            app:texttype="normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/optionpoint"
            android:background="@color/gray_btn_bg_color"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
