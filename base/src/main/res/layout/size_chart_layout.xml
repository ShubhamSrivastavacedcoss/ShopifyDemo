<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/alert_dialog_shape"
        android:padding="10dp">

        <com.shopifydemodemo.app.customviews.MageNativeTextView
            android:id="@+id/sizeChartTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/size_chart"
            app:layout_constraintTop_toTopOf="parent"
            app:texttype="bold" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/close_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/close_icon" />

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/sizeChartTitle" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
