<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="variantdata"
            type="com.shopifydemodemo.app.productsection.models.VariantData" />
        <variable
            name="commondata"
            type="com.shopifydemodemo.app.basesection.models.CommanModel" />
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/main_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        bind:cardBackgroundColor="@color/white"
        android:layout_margin="5dp"
        android:onClick="@{(view) -> variantdata.blockClick(view,variantdata)}"
        bind:cardUseCompatPadding="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/variant_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/image"
                bind:layout_constraintEnd_toEndOf="parent"
                bind:layout_constraintStart_toStartOf="parent"
                bind:layout_constraintTop_toTopOf="parent"
                bind:layout_constraintBottom_toBottomOf="parent"
                bind:imageUrl="@{commondata.imageurl}" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:background="@drawable/shadow"/>

                <com.shopifydemodemo.app.customviews.MageNativeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    bind:layout_constraintStart_toStartOf="parent"
                    bind:layout_constraintEnd_toEndOf="parent"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/selected3"
                    bind:texttype="whitetext"
                    android:layout_marginStart="5dp"
                    android:text="@{variantdata.selectedoption_three}"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:gravity="center_vertical"
                    />
                <com.shopifydemodemo.app.customviews.MageNativeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    bind:layout_constraintStart_toStartOf="parent"
                    bind:layout_constraintBottom_toTopOf="@id/selected3"
                    android:id="@+id/selected2"
                    bind:texttype="whitetext"
                    android:layout_marginStart="5dp"
                    bind:layout_constraintEnd_toEndOf="parent"
                    android:text="@{variantdata.selectedoption_two}"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:gravity="center_vertical"
                    />
                <com.shopifydemodemo.app.customviews.MageNativeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    bind:layout_constraintStart_toStartOf="parent"
                    bind:layout_constraintBottom_toTopOf="@id/selected2"
                    android:id="@+id/selected1"
                    bind:texttype="whitetext"
                    android:layout_marginStart="5dp"
                    bind:layout_constraintEnd_toEndOf="parent"
                    android:text="@{variantdata.selectedoption_one}"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:gravity="center_vertical"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/tick_image"
                    android:adjustViewBounds="true"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintEnd_toEndOf="parent"
                    bind:layout_constraintStart_toStartOf="parent"
                    bind:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="@string/image"
                    android:visibility="@{variantdata.istick}"
                    android:src="@drawable/tick_img"
                    />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>

